<div class="join join-vertical w-full">
  <!-- Notice Message (Conditional) -->
  <% if notice.present? %>
    <div class="collapse collapse-arrow join-item border border-base-300">
      <input type="checkbox" /> 
      <div class="collapse-title text-xl font-medium">
        Notice
      </div>
      <div class="collapse-content"> 
        <p class="text-green-500"><%= notice %></p>
      </div>
    </div>
  <% end %>

  <!-- Rendered Post -->
  <div class="collapse collapse-arrow join-item border border-base-300">
    <input type="checkbox" checked="checked" /> 
    <div class="collapse-title text-xl font-medium">
      Post Content
    </div>
    <div class="collapse-content">
      <%= render @post %>
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="collapse collapse-arrow join-item border border-base-300">
    <input type="checkbox" /> 
    <div class="collapse-title text-xl font-medium">
      Actions
    </div>
    <div class="collapse-content">
      <div class="flex gap-2">
        <%= link_to "Edit this post", edit_post_path(@post), class: "inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
        <%= link_to "Back to posts", posts_path, class: "inline-block bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
        <%= button_to "Destroy this post", @post, method: :delete, form: { class: "inline-block" }, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded", data: { confirm: "Are you sure?" } %>
      </div>
    </div>
  </div>
</div>
