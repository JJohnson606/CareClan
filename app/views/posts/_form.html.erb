<%= form_with(model: post, class: "space-y-4") do |form| %>
  <% if post.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
      <strong class="font-bold">Oops!</strong>
      <span class="block sm:inline"><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</span>
      <ul class="list-disc list-inside">
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Hidden fields -->
  <%= form.hidden_field :author_id, value: current_user.id %>
  <%= form.hidden_field :trusted, value: false %>
  <!-- End of hidden fields -->

  <div>
    <%= form.label :body, class: "block font-medium text-gray-700" %>
    <%= form.text_area :body, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
  </div>

  <div>
    <%= form.label :image, class: "block font-medium text-gray-700" %>
    <%= form.text_field :image, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
  </div>

  <div class="flex items-center">
    <%= form.label :trusted, class: "block font-medium text-gray-700" %>
    <%= form.check_box :trusted, class: "ml-2 block rounded border-gray-300 text-indigo-600 shadow-sm" %>
  </div>

  <div>
    <%= form.submit class: "inline-flex items-center px-4 py-2 bg-blue-500 border border-transparent rounded-md font-semibold text-xs text-white uppercase tracking-widest hover:bg-blue-600 active:bg-blue-700 focus:outline-none focus:border-blue-700 focus:shadow-outline-blue disabled:opacity-25 transition ease-in-out duration-150" %>
  </div>
<% end %>
