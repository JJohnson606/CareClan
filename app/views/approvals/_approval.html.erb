<div class="card lg:card-side bg-base-100 shadow-xl mb-4 flex">
  <div class="card-body">
    <!-- Votetype -->
    <p>
      <strong>Votetype:</strong>
      <% if approval.votetype %>
        <span class="badge badge-success">Approved</span>
      <% else %>
        <span class="badge badge-error">Disapproved</span>
      <% end %>
    </p>

    <!-- Voter -->
    <p>
      <strong>Voter:</strong>
      <%= approval.voter.name %> <!-- Assuming you have a `voter` association set up correctly -->
    </p>

    <!-- Post and Author -->
    <p>
      <strong>Post by:</strong>
      <%= approval.post.author.name %> <!-- Assuming `post` and `author` associations are set up correctly -->
    </p>

    <!-- Approvals Count -->
    <!-- If approvals_count is meant to be on the Post model, adjust accordingly -->
    <p>
      <strong>Approvals count:</strong>
      <%= approval.post.approvals_count %> <!-- Assuming `approvals_count` is a counter cache on Post model -->
    </p>
  </div>
</div>
